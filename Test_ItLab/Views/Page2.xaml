<Page 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Properties="clr-namespace:Test_ItLab.Properties" x:Class="Test_ItLab.Page2" 
      >
    <Grid Background="Pink">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Source="/Components/Images/Page2/Rectangle5.png" Stretch="UniformToFill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Image Grid.Column="1" Source="/Components/Images/Page2/Rectangle4.png" Stretch="UniformToFill" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="/Components/Images/Page2/Group1.png" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Button Grid.Row="2" Content="Посмотреть PDF" Click="OpenPdf1_Click" Background="{x:Null}" BorderBrush="#FFFFAF00" FontFamily="Arial Black" Margin="50" Foreground="#FFFFAF00" FontWeight="Bold"/>
            </Grid>



            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="/Components/Images/Page2/Group2.png" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <Button Grid.Row="2" Content="Посмотреть PDF 2" Click="OpenPdf2_Click" Background="{x:Null}" BorderBrush="#FFFFAF00" FontFamily="Arial Black" Margin="50" Foreground="#FFFFAF00" FontWeight="Bold"/>
            </Grid>
            
            
            
            
            
            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="50">
                <TextBlock Text="ФИО" Margin="10"/>
                <TextBox Text="{Binding FullName}" Margin="10"/>

                <TextBlock Text="Телефон" Margin="10"/>
                <TextBox Text="{Binding Phone}" Margin="10"/>

                <TextBlock Text="Email" Margin="10"/>
                <TextBox Text="{Binding Email}" Margin="10"/>

                <Button Content="Подтвердить данные" Command="{Binding SubmitCommand}" Click="Button_Click" Background="#FFFFAF00" FontFamily="Arial Black" FontWeight="Bold" Foreground="Black"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>