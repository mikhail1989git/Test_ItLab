<Page x:Class="Test_ItLab.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#121212">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Image Grid.Column="0" Grid.Row="1" Grid.RowSpan="4" Source="/Components/Images/Page1/Vector.png" HorizontalAlignment="Left" Stretch="Uniform" VerticalAlignment="Center"/>


        <Image Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Source="/Components/Images/Page1/Frame11.png" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform"/>

        <Image Grid.Column="2" Grid.Row="4" Source="/Components/Images/Page1/Group1.png" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform"/>
        <Image Grid.Column="3" Grid.Row="4" Source="/Components/Images/Page1/Group2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform"/>
        
        <Image Grid.Column="5" Grid.Row="1" Grid.RowSpan="4" Source="/Components/Images/Page1/Group12.png" HorizontalAlignment="Right" Stretch="Uniform" VerticalAlignment="Center"/>

        <Button Grid.ColumnSpan="6" Grid.RowSpan="6" Background="Transparent" Opacity="0" Click="Button_Click"/>
    </Grid>
</Page>